<!-- Buttons -->
<div class="btn-demo">
   <h5>Generic buttons</h5>
   <div class="row">
      <button class="btn btn-default">Default</button>
      <button class="btn btn-primary">Primary</button>
      <button class="btn btn-cancel">Cancel</button>
      <button class="btn btn-success">Success</button>
      <button class="btn btn-danger">Danger</button>
   </div>
   <h5>Button sizes</h5>
   <div class="row flex-center">
      <button class="btn btn-primary btn-large">Large</button>
      <button class="btn btn-primary">Default</button>
   </div>
   <h5>Disabled buttons</h5>
   <div class="row">
      <button class="btn btn-default" disabled="disabled">Default</button>
      <button class="btn btn-primary" disabled="disabled">Primary</button>
      <button class="btn btn-cancel" disabled="disabled">Cancel</button>
      <button class="btn btn-success" disabled="disabled">Success</button>
      <button class="btn btn-danger" disabled="disabled">Danger</button>
   </div>
   <h5>Button icons</h5>
   <div class="row">
      <button class="btn btn-primary"><i class="zmdi zmdi-search"></i>Search</button>
      <button class="btn btn-primary"><i class="zmdi zmdi-more-vert"></i>More</button>
      <button class="btn btn-primary"><i class="zmdi zmdi-arrow-back"></i>Back</button>
      <button class="btn btn-primary"><i class="zmdi zmdi-menu"></i>Menu</button>
   </div>
   <h5>Block buttons</h5>
   <div class="row">
      <button class="btn btn-default btn-block">Default</button>
      <button class="btn btn-primary btn-block">Primary</button>
   </div>
</div>
<!-- /Buttons -->